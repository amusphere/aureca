{
  "spoke_name": "google_calendar",
  "display_name": "Google Calendar",
  "description": "Google Calendar integration for managing calendar events",
  "actions": [
    {
      "action_type": "get_calendar_events",
      "display_name": "Get Calendar Events",
      "description": "カレンダーの予定を取得",
      "parameters": {
        "start_date": {
          "type": "string",
          "format": "datetime",
          "required": false,
          "description": "検索開始日時（ISO8601形式）",
          "default": "today"
        },
        "end_date": {
          "type": "string",
          "format": "datetime",
          "required": false,
          "description": "検索終了日時（ISO8601形式）",
          "default": "one_week_later"
        }
      }
    },
    {
      "action_type": "create_calendar_event",
      "display_name": "Create Calendar Event",
      "description": "カレンダーに新しい予定を作成",
      "parameters": {
        "summary": {
          "type": "string",
          "required": true,
          "description": "予定のタイトル"
        },
        "start_time": {
          "type": "string",
          "format": "datetime",
          "required": true,
          "description": "開始日時（ISO8601形式）"
        },
        "end_time": {
          "type": "string",
          "format": "datetime",
          "required": true,
          "description": "終了日時（ISO8601形式）"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "予定の詳細説明"
        },
        "location": {
          "type": "string",
          "required": false,
          "description": "場所"
        }
      }
    },
    {
      "action_type": "update_calendar_event",
      "display_name": "Update Calendar Event",
      "description": "既存の予定を更新",
      "parameters": {
        "event_id": {
          "type": "string",
          "required": true,
          "description": "更新する予定のID"
        },
        "summary": {
          "type": "string",
          "required": false,
          "description": "予定のタイトル"
        },
        "start_time": {
          "type": "string",
          "format": "datetime",
          "required": false,
          "description": "開始日時（ISO8601形式）"
        },
        "end_time": {
          "type": "string",
          "format": "datetime",
          "required": false,
          "description": "終了日時（ISO8601形式）"
        },
        "description": {
          "type": "string",
          "required": false,
          "description": "予定の詳細説明"
        },
        "location": {
          "type": "string",
          "required": false,
          "description": "場所"
        }
      }
    },
    {
      "action_type": "delete_calendar_event",
      "display_name": "Delete Calendar Event",
      "description": "予定を削除",
      "parameters": {
        "event_id": {
          "type": "string",
          "required": true,
          "description": "削除する予定のID"
        }
      }
    }
  ]
}